#include <stdio.h>
#include <stdlib.h>
#include <time.h>

double azar(int,int,int);

int main()
{
    int min,max,decimal;
    srand(time(NULL));
    printf("Ingrese min: ");
    scanf("%d",&min);
    printf("Ingrese el maximo: ");
    scanf("%d",&max);
    printf("Ingrese cantidad de decimales: ");
    scanf("%d",&decimal);
    printf("%.12g",azar(min,max,decimal));
    return 0;
}

double azar(int min,int max,int deci)
{
    int entero,num=1,i,decimal;
    double numero;
    entero=rand()%(max-min+1)+min;
    for(i=1;i<=deci;i++)
    {
        num*=10;
    }
    decimal=rand()%num;
    numero=decimal;
    while(decimal>0)
    {
        numero/=10;
        decimal=decimal/10;
    }
    return entero+numero;
}
